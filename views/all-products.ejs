<!-- supplied code -->

<body>

  <!-- header link -->
  <%- include('partials/header') %>

    <!-- main content -->

    <div class="products" style="height: auto">
      <% for (let i=0; i < products.length; i++) { %>
        <!-- item <%= i+1 %> -->
        <a class="product-box" href="http://localhost:8080/products/<%= products[i].id %>">

          <img class="product-image" src="<%= products[i].photo %>" alt="<%= products[i].title %>">
          <div class="product-info">
            <text><strong>Title:</strong>
              <%= products[i].title %>
            </text>
            <br>
            <text><strong>Price:</strong>
              $<%= products[i].price %> CAD
            </text>
          </div>
          <div class="icon">
            <i class="fa-solid fa-heart fa-2xl" style="color: #191919;"></i>
          </div>
      </a>
        <% } %>
    </div>

    <!-- </div> -->

    <!-- FOOTER -->
    <%- include('partials/footer') %>

</body>

</html>
